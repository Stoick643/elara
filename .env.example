# Elara Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development: uses SQLite (no DATABASE_URL needed)
# For production: PostgreSQL connection string from Render
DATABASE_URL=postgresql://user:password@host/database_name

# Security
# Generate a strong secret key for production
SECRET_KEY=your-secret-key-here-change-in-production

# Default User Credentials
# Single-user setup for personal use
DEFAULT_USERNAME=me
DEFAULT_PASSWORD=change-this-password

# LLM API Keys (Optional - for AI Coach features)
# Leave blank if not using AI features
GEMINI_API_KEY=
DEEPSEEK_API_KEY=
MOONSHOT_API_KEY=

# LLM Configuration (Optional)
LLM_PROVIDER=gemini
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_RATE_LIMIT=10

# Flask Configuration
# Set to 'production' for deployment
FLASK_ENV=development